{
  "name": "gnonce-expressjs",
  "version": "1.0.0",
  "description": "Boilerplate for modern Express.js powered backend application.",
  "main": "index.ts",
  "scripts": {
    "start": "npm run start:prod",
    "start:dev": "NODE_ENV=development nodemon ./src/app.ts --exec ts-node",
    "start:prod": "node ./dist/app.js",
    "build": "tsc -p ./",
    "clean": "rm -rf dist",
    "test": "jest",
    "coverage": "jest --collectCoverageFrom=./**.ts --coverage ./"
  },
  "dependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/node": "^12.12.22",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.8.3",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "chai": "^4.2.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  }
}
